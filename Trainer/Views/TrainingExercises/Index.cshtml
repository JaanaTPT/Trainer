@model IEnumerable<Trainer.Models.TrainingExercise>

@{
    ViewData["Title"] = "Training exercises";
}

<h1>Training exercises</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by exercise name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Training.Client.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Training.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rounds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repetitions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Training)
        </th>*@

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Training.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rounds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repetitions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Training.TrainingID)
        </td>*@

            <td>
                <a asp-action="Edit" asp-route-id="@item.TrainingExerciseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrainingExerciseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrainingExerciseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
