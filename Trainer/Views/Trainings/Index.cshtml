@model IEnumerable<Trainer.Models.Training>

@{
    ViewData["Title"] = "Trainings";
}

<h1>Trainings</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrainingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrainingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrainingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
