@model Trainer.Models.TrainingViewModels.TrainingDetailsData

@{
    ViewData["Title"] = "Trainings";
}

<h1>Trainings</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Client
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Trainings)
        {
            string selectedRow = "";
            if (item.TrainingID == (int?)ViewData["TrainingID"])
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            @*<td>
            @foreach (var exercise in item.TrainingExercises)
            {
                @exercise.Exercise.Title <br />
            }
        </td>*@

            <td>
                <a asp-action="Edit" asp-route-id="@item.TrainingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrainingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrainingID">Delete</a>
            </td>
        </tr>
            }
        </tbody>
</table>
